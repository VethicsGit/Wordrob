<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:weightSum="10"
    android:layout_margin="10dp"
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_weight = "7">

        <android.support.v7.widget.CardView
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_gravity = "center_vertical"
            app:cardCornerRadius = "10dp">

            <ImageView
                android:id="@+id/order_history_item_img"
                android:layout_width = "105dp"
                android:layout_height = "105dp"
                android:scaleType="centerCrop"
                android:src = "@drawable/order_detail" />

        </android.support.v7.widget.CardView>


    </LinearLayout>

    <RelativeLayout
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:layout_weight = "3">

        <LinearLayout

            android:layout_width = "match_parent"
            android:layout_height = "match_parent"
            android:layout_marginStart = "10dp"
            android:gravity = "center_vertical"
            android:orientation = "vertical">

            <TextView android:autoSizeTextType="uniform"
                android:id="@+id/order_history_item_title"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:layout_centerInParent = "true"
                android:layout_gravity = "start"
                android:text = "Lipsy Crown T-shirt"
                android:textColor = "@color/colorAccent"
                android:textSize = "18dp"
                android:textStyle = "bold" />

            <TextView android:autoSizeTextType="uniform"
                android:id="@+id/order_history_item_catename"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:layout_centerInParent = "true"
                android:layout_gravity = "start"
                android:text = "clothing &amp; passion"
                android:textColor = "#cdcdcd"
                android:textSize = "12dp" />

            <LinearLayout
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content">
                <TextView android:autoSizeTextType="uniform"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:layout_centerInParent = "true"
                    android:layout_gravity = "start"
                    android:text = "Quantity "
                    android:textColor = "#cdcdcd"
                    android:textSize = "12dp" />
                <TextView android:autoSizeTextType="uniform"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:id="@+id/order_history_item_qty"
                    android:layout_centerInParent = "true"
                    android:layout_gravity = "start"
                    android:text = "12"
                    android:textColor = "@color/colorAccent"
                    android:textSize = "12dp" />
            </LinearLayout>
            <TextView android:autoSizeTextType="uniform"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:layout_centerInParent = "true"
                android:id="@+id/order_history_item_price"
                android:layout_gravity = "start"
                android:text = "84 QAR"
                android:textColor = "@color/colorAccent"
                android:textSize = "15dp"
                android:textStyle = "bold" />


        </LinearLayout>


    </RelativeLayout>


</LinearLayout>